{
    "name": "fixed-term-delivery/site-generator",
    "description": "A scenario-driven static site generator for Amazon affiliate marketing.",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.5",
        "twig/twig": "^3.4",
        "symfony/yaml": "^6.1",
        "erusev/parsedown": "^1.7",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}